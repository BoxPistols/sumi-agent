{
  "name": "sumi",
  "version": "1.0.0",
  "private": true,
  "description": "Sumi - 経歴書の個人情報 自動検出・マスキング",
  "scripts": {
    "predev": "rm -rf .next",
    "dev": "portless sumi next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "fix": "pnpm lint:fix && pnpm format:write",
    "prepare": "husky"
  },
  "dependencies": {
    "@remotion/cli": "^4.0.427",
    "@remotion/player": "^4.0.427",
    "intro.js": "^8.3.2",
    "intro.js-react": "^1.0.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.8.0",
    "next": "^15.2.0",
    "papaparse": "^5.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remotion": "^4.0.427",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@types/node": "^22.0.0",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.2.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "portless": "^0.4.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.15.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/BoxPistols/sumi.git"
  },
  "homepage": "https://sumi-agent.vercel.app",
  "license": "MIT",
  "author": "BoxPistols",
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "eslint --fix --no-warn-ignored",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
